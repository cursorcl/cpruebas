<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence 
http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
	<persistence-unit name="cpruebas" transaction-type="JTA">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<jta-data-source>java:jboss/datasources/MySQL</jta-data-source>
		<class>cl.eos.persistence.models.Alumno</class>
		<class>cl.eos.persistence.models.Asignatura</class>
		<class>cl.eos.persistence.models.Ciclo</class>
		<class>cl.eos.persistence.models.Colegio</class>
		<class>cl.eos.persistence.models.Curso</class>
		<class>cl.eos.persistence.models.EjeTematico</class>
		<class>cl.eos.persistence.models.EvaluacionEjeTematico</class>
		<class>cl.eos.persistence.models.EvaluacionPrueba</class>
		<class>cl.eos.persistence.models.Formas</class>
		<class>cl.eos.persistence.models.Habilidad</class>
		<class>cl.eos.persistence.models.NivelEvaluacion</class>
		<class>cl.eos.persistence.models.Profesor</class>
		<class>cl.eos.persistence.models.Prueba</class>
		<class>cl.eos.persistence.models.PruebaRendida</class>
		<class>cl.eos.persistence.models.RangoEvaluacion</class>
		<class>cl.eos.persistence.models.RespuestasEsperadasPrueba</class>
		<class>cl.eos.persistence.models.TipoCurso</class>
		<class>cl.eos.persistence.models.TipoPrueba</class>

		<!-- <shared-cache-mode>NONE</shared-cache-mode> -->
		<!-- test design time and deployment of JPA 2.0 -->
		<properties>
			<!-- Application managed datasource -->
			<property name="eclipselink.target-server" value="JBoss" />
			<property name="eclipselink.target-database" value="MySQL" />
			<!-- remove for production -->
			<!-- <property name="eclipselink.ddl-generation" value="drop-and-create-tables"/> 
				<property name="eclipselink.ddl-generation.output-mode" value="database"/> 
				<property name="eclipselink.logging.level" value="FINEST"/> -->
			<!-- enable SQL parameter binding visibility logging to override ER 329852 -->
			<property name="eclipselink.logging.parameters" value="true" />
		</properties>
	</persistence-unit>
</persistence>
